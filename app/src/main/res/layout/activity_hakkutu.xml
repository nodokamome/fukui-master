<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.7"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/return1"
            android:layout_width="50sp"
            android:layout_height="45sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/return1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginTop="15sp"
            android:text="化石探し"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="発掘場所を選択してください" />

        <Spinner
            android:id="@+id/spinner_hakkutu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView19"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/to_hakkutucity"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:layout_below="@+id/spinner_hakkutu"
            android:layout_toEndOf="@+id/spinner_hakkutu"
            android:layout_toRightOf="@+id/spinner_hakkutu"
            android:background="@drawable/button_customize3"
            android:text="スタート"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/pow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fukui5" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_hakkutu"
            android:layout_alignStart="@+id/spinner_hakkutu"
            android:layout_below="@+id/textView6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="下から選択　or \n　地図をタッチしてね"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView6"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:text="選択中の市町村"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView20"
            android:layout_alignRight="@+id/textView20"
            android:layout_below="@+id/textView20"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iwa1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="山で発掘"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/iwa1"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/yama3" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="タッチしてね"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView23"
            android:layout_alignEnd="@+id/textView23"
            android:layout_marginBottom="46dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_tohome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_customize4"
            android:onClick="onClick"
            android:text="マイページ"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_tomuseum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_customize4"
            android:onClick="onClick"
            android:text="博物館"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_torecord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_customize4"
            android:onClick="onClick"
            android:text="記録"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_toranking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/button_customize4"
            android:onClick="onClick"
            android:text="ランキング" />

    </LinearLayout>

</LinearLayout>