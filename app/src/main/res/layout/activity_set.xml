<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/pattern">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.7"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/return1"
                android:layout_width="50sp"
                android:layout_height="45sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/return1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="15sp"
                android:text="設定"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText3"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/editText3"
                android:text="名前"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView7"
                android:ems="10"
                android:hint="7文字以内です"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText3"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="12dp"
                android:text="出身（都道府県）"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="20dp"
                android:entries="@array/list" />

            <Button
                android:id="@+id/button_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/button_customize4"
                android:layout_marginStart="25dp"
                android:onClick="onClick"
                android:text="変更する"
                android:layout_alignTop="@+id/checkBox"
                android:layout_toRightOf="@+id/editText3"
                android:layout_toEndOf="@+id/editText3" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="69dp"
                android:text="効果音"
                android:layout_below="@+id/spinner2"
                android:layout_alignRight="@+id/spinner2"
                android:layout_alignEnd="@+id/spinner2" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_tohome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize4"
                android:onClick="onClick"
                android:text="マイページ"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_tohakkutu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize4"
                android:onClick="onClick"
                android:text="化石探し"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_tomuseum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize4"
                android:onClick="onClick"
                android:text="博物館"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_torecord"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize4"
                android:onClick="onClick"
                android:text="記録"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_toranking"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize4"
                android:onClick="onClick"
                android:text="ランキング"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>