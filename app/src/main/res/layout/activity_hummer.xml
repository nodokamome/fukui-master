            android:scaleType="fitCenter"
            android:src="@drawable/hp14" />

        <ImageView
            android:id="@+id/hp13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp14"
            android:layout_toEndOf="@+id/hp14"
            android:layout_toRightOf="@+id/hp14"
            android:scaleType="fitCenter"
            android:src="@drawable/hp13" />

        <ImageView
            android:id="@+id/hp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp13"
            android:layout_toEndOf="@+id/hp13"
            android:layout_toRightOf="@+id/hp13"
            android:scaleType="fitCenter"
            android:src="@drawable/hp12" />

        <ImageView
            android:id="@+id/hp11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp12"
            android:layout_toEndOf="@+id/hp12"
            android:layout_toRightOf="@+id/hp12"
            android:scaleType="fitCenter"
            android:src="@drawable/hp11" />

        <ImageView
            android:id="@+id/hp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp11"
            android:layout_toEndOf="@+id/hp11"
            android:layout_toRightOf="@+id/hp11"
            android:scaleType="fitCenter"
            android:src="@drawable/hp10" />

        <ImageView
            android:id="@+id/hp9"
            android:layout_width="wrap_content"
