            android:layout_toRightOf="@+id/hp10"
            android:scaleType="fitCenter"
            android:src="@drawable/hp9" />

        <ImageView
            android:id="@+id/hp8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp9"
            android:layout_toEndOf="@+id/hp9"
            android:layout_toRightOf="@+id/hp9"
            android:scaleType="fitCenter"
            android:src="@drawable/hp8" />

        <ImageView
            android:id="@+id/hp7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp8"
            android:layout_toEndOf="@+id/hp8"
            android:layout_toRightOf="@+id/hp8"
            android:scaleType="fitCenter"
            android:src="@drawable/hp7" />

        <ImageView
            android:id="@+id/hp6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp7"
            android:layout_toEndOf="@+id/hp7"
            android:layout_toRightOf="@+id/hp7"
            android:scaleType="fitCenter"
