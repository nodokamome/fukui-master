        <TextView
            android:id="@+id/life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tx_blockHp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/hp1"
            android:layout_toRightOf="@+id/hp1"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="スマホをハンマーのように振って、石を砕こう！"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/pow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="パワー"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tx_blockHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="27dp"
            android:text="残り:"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/pow5"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_above="@+id/pow4"
            android:layout_alignLeft="@+id/pow4"
            android:layout_alignStart="@+id/pow4"
            android:scaleType="fitCenter"
            android:src="@drawable/pow5"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/pow4"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_above="@+id/pow3"
            android:layout_alignLeft="@+id/pow3"
            android:layout_alignStart="@+id/pow3"
            android:scaleType="fitCenter"
            android:src="@drawable/pow4"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/pow3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_above="@+id/pow2"
            android:layout_alignLeft="@+id/pow2"
            android:layout_alignStart="@+id/pow2"
            android:scaleType="fitCenter"
            android:src="@drawable/pow3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/pow2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_above="@+id/pow1"
            android:layout_alignLeft="@+id/pow1"
            android:layout_alignStart="@+id/pow1"
            android:scaleType="fitCenter"
            android:src="@drawable/pow2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/pow1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_above="@+id/pow"
            android:layout_alignLeft="@+id/pow"
            android:layout_alignStart="@+id/pow"
            android:layout_marginBottom="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pow1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tx_pow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/pow5"
            android:layout_marginRight="5dp"
            android:text="20" />

        <TextView
            android:id="@+id/tx_pow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/pow4"
            android:layout_marginRight="5dp"
            android:text="15" />

        <TextView
            android:id="@+id/tx_pow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/pow3"
            android:layout_marginRight="5dp"
            android:text="10" />

        <TextView
            android:id="@+id/tx_pow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/pow2"
            android:layout_marginRight="5dp"
            android:text="5" />

        <TextView
            android:id="@+id/tx_pow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pow2"
            android:layout_marginRight="5dp"
            android:text="1" />

        <TextView
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/imageView2"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>