<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/return1"
            android:layout_width="50sp"
            android:layout_height="45sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/return1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginTop="15sp"
            android:text="化石探し"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="ハンマー"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tx_iwaNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="石 No."
                android:textColor="@android:color/holo_red_light"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hp20"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/pow"
            android:layout_toStartOf="@+id/pow"
            android:scaleType="fitCenter"
            android:src="@drawable/iwa1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/tx_pow1"
            android:layout_toEndOf="@+id/tx_blockHp"
            android:layout_toRightOf="@+id/tx_blockHp"
            android:layout_weight="8"
            android:visibility="invisible"
            app:srcCompat="@drawable/f1" />

        <ImageView
            android:id="@+id/hp20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/tx_blockHp"
            android:layout_toRightOf="@+id/tx_blockHp"
            android:scaleType="fitCenter"
            android:src="@drawable/hp20" />

        <ImageView
            android:id="@+id/hp19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp20"
            android:layout_toEndOf="@+id/hp20"
            android:layout_toRightOf="@+id/hp20"
            android:scaleType="fitCenter"
            android:src="@drawable/hp19" />

        <ImageView
            android:id="@+id/hp18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp19"
            android:layout_toEndOf="@+id/hp19"
            android:layout_toRightOf="@+id/hp19"
            android:scaleType="fitCenter"
            android:src="@drawable/hp18" />

        <ImageView
            android:id="@+id/hp17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp18"
            android:layout_toEndOf="@+id/hp18"
            android:layout_toRightOf="@+id/hp18"
            android:scaleType="fitCenter"
            android:src="@drawable/hp17" />

        <ImageView
            android:id="@+id/hp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp17"
            android:layout_toEndOf="@+id/hp17"
            android:layout_toRightOf="@+id/hp17"
            android:scaleType="fitCenter"
            android:src="@drawable/hp16" />

        <ImageView
            android:id="@+id/hp15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hp16"
            android:layout_toEndOf="@+id/hp16"
            android:layout_toRightOf="@+id/hp16"
            android:scaleType="fitCenter"
            android:src="@drawable/hp15" />

        <ImageView
            android:id="@+id/hp14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
