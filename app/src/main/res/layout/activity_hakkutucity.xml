<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/return1"
            android:layout_width="50sp"
            android:layout_height="45sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/return1" />

        <TextView
            android:id="@+id/kasekisagasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginTop="15sp"
            android:text="化石探し"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/hakkutucity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:text="市長村"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="宝箱を探そう！"
                android:textColor="@color/wallet_holo_blue_light"
                android:textSize="18sp" />

        </LinearLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_tohome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_customize4"

            android:onClick="onClick"
            android:text="マイページ"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_tomuseum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_customize4"

            android:onClick="onClick"
            android:text="博物館"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_torecord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_customize4"
            android:onClick="onClick"
            android:text="記録"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_toranking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/button_customize4"
            android:onClick="onClick"
            android:text="ランキング" />

    </LinearLayout>

</LinearLayout>